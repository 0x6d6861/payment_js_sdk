{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*",
        "src/utils/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}